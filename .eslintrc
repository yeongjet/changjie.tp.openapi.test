{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "semi": ["error", "always"], // 行尾加分号
    "quotes": ["error", "single"],  // 统一使用单引号
    "no-unused-vars": "off", // 允许定义未使用的变量
    "no-bitwise": "off",  // 可以使用按位运算符
    "comma-dangle": ["error", "never"],  // 结构的最后一行不能以逗号结尾
    "array-bracket-spacing":"off", // []不需要内部加空格
    "no-case-declarations": "off",  // 在case作用域可以中定义变量
    "@typescript-eslint/camelcase": "off", // 允许使用下划线命名
    "@typescript-eslint/ban-ts-ignore": "off",  // 可用ts-ignore
    "@typescript-eslint/no-var-requires": "off", // 允许使用require导入
    "@typescript-eslint/no-unused-vars": "off", // 允许定义未使用的变量
    "@typescript-eslint/no-explicit-any": "off", // 允许使用any
    "@typescript-eslint/no-use-before-define": "off", // 变量/函数必须在定义后使用
    "@typescript-eslint/explicit-function-return-type": "off", // 函数不需要声明返回值类型
    "@typescript-eslint/consistent-type-assertions": "off"  // 限制强制类型转换可以使用变量前加<type>方式
  },
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"]
}